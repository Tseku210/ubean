---
import { formatPrice } from "@/lib/utils";
import type { AddOn } from "@/types";

const { name, price, separate } = Astro.props as AddOn;
---

<div
  class="bg-secondary text-secondary-foreground w-full space-y-2 rounded-3xl px-4 py-5 md:px-8 md:py-7"
>
  <span class="md:text-h6 text-h7 block uppercase">{name}</span>
  <span class="text-h7 md:text-h6"
    >{separate ? formatPrice(price) : `+${formatPrice(price)}`}</span
  >
</div>
