---
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import UBeanCup from '/public/images/ubean-cup.webp';
---

<Layout title='UBean - Page Not Found'>
  <main class='mx-auto flex min-h-[calc(100vh-74px-122px)] max-w-4xl items-center justify-center'>
    <div class='flex flex-col items-center gap-8 text-center'>
      <!-- Rotating Coffee Cup -->
      <div class='relative'>
        <div class='coffee-cup-container'>
          <Image
            src={UBeanCup}
            alt='UBean Coffee Cup'
            class='coffee-cup h-48 w-48 md:h-64 md:w-64'
            width={256}
            height={256}
          />
        </div>
      </div>

      <!-- Error Message -->
      <h1 class='text-primary text-7xl font-bold'>404</h1>
      <h2 class='text-h3 text-secondary font-bold'>Oops! This page got lost in the coffee grounds</h2>
    </div>
  </main>
</Layout>

<style>
  /* Coffee cup rotation animation */
  .coffee-cup-container {
    position: relative;
    animation: gentle-wobble 3s var(--ease-in-out-cubic) infinite;
  }

  .coffee-cup {
    animation: rotate-cup 8s var(--ease-in-out-quad) infinite;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
    will-change: transform;
  }

  /* Animations */
  @keyframes rotate-cup {
    0% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(5deg);
    }
    50% {
      transform: rotate(0deg);
    }
    75% {
      transform: rotate(-5deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }

  @keyframes gentle-wobble {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes steam-rise {
    0% {
      opacity: 0.8;
      transform: translateY(0px) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(-30px) scale(1.2);
    }
  }
</style>
